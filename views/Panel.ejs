<script>
    document.addEventListener('DOMContentLoaded', chartDone);

    function chartDone() {
        const options = (type, height, numbers, color) => {
            return {
                chart: {
                    height: height,
                    type: type,
                    sparkline: { enabled: true },
                    toolbar: { show: false },
                },
                grid: {
                    show: false,
                    padding: { top: 0, right: 0, bottom: 0, left: 0 }
                },
                dataLabels: { enabled: false },
                legend: { show: false },
                series: [{ name: "serie1", data: numbers }],
                fill: { colors: [color] },
                stroke: { colors: [color], width: 3 },
                yaxis: { show: false },
                xaxis: { show: false, labels: { show: false } },
                tooltip: { enabled: false },
            };
        };

        const analytics_1 = document.querySelector("#analytics_1");
        const analytics_2 = document.querySelector("#analytics_2");

        if (analytics_1 && analytics_2) {
            const chart1 = new ApexCharts(analytics_1, options("area", '51px', numArr(10, 99), '#4fd1c5'));
            const chart2 = new ApexCharts(analytics_2, options("area", '51px', numArr(10, 99), '#4c51bf'));
            chart1.render();
            chart2.render();
        }
    }

    function numArr(min, max) {
        return Array.from({ length: 10 }, () => Math.floor(Math.random() * (max - min + 1)) + min);
    }
    
document.addEventListener('DOMContentLoaded', ChartBar);

function ChartBar() {
    var sealsOptions = {
        chart: {
            height: 350,
            type: "line",  // The main chart type can remain "line" even if you have mixed types.
            stacked: false
        },
        dataLabels: {
            enabled: false
        },
        colors: ['#99C2A2', '#C5EDAC', '#66C7F4'],
        series: [
            {
                name: 'Column A',
                type: 'column',  // Correct type for this series.
                data: [21.1, 23, 33.1, 34, 44.1, 44.9, 56.5, 58.5]
            },
            {
                name: "Column B",
                type: 'column',  // Correct type for this series.
                data: [10, 19, 27, 26, 34, 35, 40, 38]
            },
            {
                name: "Line C",
                type: 'line',  // Correct type for this series (was incorrectly set as 'column').
                data: [1.4, 2, 2.5, 1.5, 2.5, 2.8, 3.8, 4.6]
            }
        ],
        stroke: {
            width: [0, 0, 4]  // No stroke for columns, only for the line.
        },
        plotOptions: {
            bar: {
                columnWidth: "20%"  // Width for the columns.
            }
        },
        xaxis: {
            categories: [2009, 2010, 2011, 2012, 2013, 2014, 2015, 2016]
        },
        yaxis: [
            {
                seriesName: 'Column A',
                axisTicks: {
                    show: true
                },
                axisBorder: {
                    show: true,
                },
                title: {
                    text: "Columns"
                }
            },
            {
                seriesName: 'Column A',
                show: false
            }, 
            {
                opposite: true,
                seriesName: 'Line C',
                axisTicks: {
                    show: true
                },
                axisBorder: {
                    show: true,
                },
                title: {
                    text: "Line"
                }
            }
        ],
        tooltip: {
            shared: false,
            intersect: true,
            x: {
                show: false
            }
        },
        legend: {
            horizontalAlign: "left",
            offsetX: 40
        }
    };

    // Select the chart container
    var sealsOverview = document.getElementById('sealsOverview');
    
    // Create a new ApexChart instance and pass the correct 'sealsOptions' object
    var sealsOverviewChart = new ApexCharts(sealsOverview, sealsOptions);
    
    // Render the chart
    sealsOverviewChart.render();
}

